extends layout

block content
  h1= title

  form(method='POST' action='')
    .form-group
      label(for='url') URL:
      input#title.form-control(type='url', placeholder='URL of Recipe' name='url' required='true' )
    button.btn.btn-primary(type='submit') Submit
    
  if errors 
    ul
      for error in errors
        li!= error.msg