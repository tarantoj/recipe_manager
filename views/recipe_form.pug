extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='title') Title:
      input#title.form-control(type='text', placeholder='Name of recipe' name='title' required='true' value=(undefined===recipe ? '' : recipe.title) )
    div.form-group
      label(for='author') Author:
      input#author.form-control(type='text', placeholder='Name of author' name='author' required='true' value=(undefined===recipe ? '' : recipe.author) )
    div.form-group
      label(for='ingredients') Ingredients:
      textarea#ingredients.form-control(placeholder='Ingredients', rows='5' name='ingredients' value=(undefined===recipe ? '' : recipe.ingredients) required='true')
    div.form-group
      label(for='method') Method:
      textarea#method.form-control(placeholder='Method', rows='5' name='method' value=(undefined===recipe ? '' : recipe.method) required='true')
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg